<h1>Categories</h1>

<table class="table table-boldered">
<thead>
	<tr>
  	<th>Name</th>
  	<th>Desc</th>
  	<th colspan="2"></th>
	</tr>
</thead>

<tbody>
	<% @categories.each do |category| %>
  	<tr>
    	<td><%= link_to category.name, category %></td>
    	<td><%= category.description %></td>
    	<td><%= link_to '编辑', edit_category_path(category) %></td>
    	<td><%= link_to '删除', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
	<% end %>
</tbody>
</table>

<br>

<button><%= link_to 'New Category', new_category_path %></button>
