<h2> Edit message </h2>
<%= simple_form_for [:admin, @message] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.input :description, :as => :kindeditor, 
    :input_html => { :width => 800, :height => 300 } %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
