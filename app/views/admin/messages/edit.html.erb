<h2> Edit message </h2>
<%= simple_form_for [:admin, @message] do |f| %>
  <div class="group">
    <%= f.input :title %>
  </div>
  <div class="group">
    <%= f.kindeditor :description ,:window_onload => true  %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>
<% end %>
